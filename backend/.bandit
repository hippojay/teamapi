[bandit]
# Exclude test files and virtual environments
exclude_dirs: tests,venv,__pycache__

# Skip verification of SSL certificates
# That's handled differently in our app (B501,B503)
skips: B501,B503,B404

# Examine all files, not just Python files
ini_file_blacklist_enabled: false

# Specify the output format
output_format: json
#output_format: custom
#output_format: json